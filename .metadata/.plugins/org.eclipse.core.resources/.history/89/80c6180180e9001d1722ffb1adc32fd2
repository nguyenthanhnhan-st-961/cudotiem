package com.cudotiem.accountservice.service;

import org.springframework.cloud.openfeign.FeignClient;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;

import com.cudotiem.postservice.dto.UserDto;

@FeignClient(value = "auth-service", url = "http://localhost:8083")
public interface APIClient {
	 @GetMapping(value = "/api/auth/{id}")
	    UserDto getUserById(@PathVariable("id") Long idUser);
}
